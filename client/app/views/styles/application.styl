// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/

// Kills bootstrap

//*
//  box-sizing: border-box

@font-face
	font-family 'VT323'
	src url('/fonts/VT323.woff') format('woff')
	font-weight normal
	font-style normal

@font-face
	font-family 'commodore'
	src url('/fonts/commodore.woff') format('woff'), url('/fonts/commodore.ttf') format('truetype')

team1-color = #C20
team2-color = #39B
team1-color-highlight = #C20
team2-color-highlight = #3364BB

.admin

	.form-inline .form-control
		width 100%

	#new-game .well
		text-align center

	#teams
		text-align center

	.team-one
		background-color team1-color

		&.turn
			background-color team1-color-highlight

	.team-two
		background-color team2-color

		&.turn
			background-color team2-color-highlight

	#question
		text-align center

	#answers
		.answered
			background-color #F00

#strikes
	text-align center
	.glyphicon
		color #BBB
		font-size 10em
		&.on
			color #F00